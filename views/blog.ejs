<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Blog</title>
    <link rel="stylesheet" href="/general">
</head>
<body>

Blog page placeholder...
<br>
<br>
<table border="1">
    <tr>
        <th>Title</th>
        <th>Snippet</th>
        <th>Link</th>
        <th>Comments</th>
    </tr>

    <%
    if(posts.length!=0){
        posts.forEach(function(data){
            var id = data.id%>
            <tr>
                <td><%=data.title%></td>
                <td><%=data.snippet%></td>
                <td><a href="http://localhost:3000/blog/post/<%=id%>">Blog Post <%=id%></a></td>
                <td><%=data.comments%></td>
            </tr>
        <% })
    } else { %>
      <tr>
          <td colspan="4">No Data Found</td>
      </tr>
    <% } %>
</table>

<br>
<br>
<a href="http://localhost:3000/about">About</a>

</body>
</html>